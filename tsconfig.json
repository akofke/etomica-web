{
    "compilerOptions": {

        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true
    },

    "include": [
        "./src/**/*"
    ],

    "exclude": [
        "node_modules",
        "dist"
    ],

    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}